{
    "$schema": "https://raw.githubusercontent.com/nnategh/Retina/master/nn/convolutional_neural_network/cnn/dagnntrainer_schema.json",
    "data": {
        "db_filename": "./assets/data/ep20c11.mat",
        "params_filename": "./assets/ground-truth/ep20c11.mat",
        "bak_dir": "must_be_removed"
    },
    "net": {
        "vars": {
            "input": {
                "name": "s",
                "size": [
                    20,
                    1
                ]
            },
            "output": {
                "name": "B",
                "size": [
                    11,
                    1
                ]
            },
            "expected_output": {
                "name": "r"
            },
            "cost": {
                "name": "c"
            }
        },
        "params": [
            {
                "name": "w_B",
                "size": [
                    10,
                    1
                ]
            }
        ],
        "layers": [
            {
                "name": "B",
                "type": "conv+relu",
                "inputs": [
                    "s"
                ],
                "outputs": [
                    "B"
                ],
                "params": [
                    [
                        "w_B"
                    ],
                    []
                ]
            },
            {
                "name": "cost",
                "type": "quadcost",
                "inputs": [
                    "B",
                    "r"
                ],
                "outputs": [
                    "c"
                ],
                "params": null
            }
        ]
    },
    "learning": {
        "train_val_test_ratios": [
            0.70,
            0.15,
            0.15
        ],
        "standardize_x": false,
        "standardize_y": false,
        "learning_rate": 1e-4,
        "batch_size": 10,
        "number_of_epochs": 9,
        "number_of_val_fails": 1000,
        "device": "cpu"
    }
}